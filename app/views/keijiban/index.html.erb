<%
=begin
%>
<% unless logged_in? %>
<div class="row mt-4">
  <div class="col">
  <p class="h4">Trending Today</p>
  </div>
</div>
<div class="row">
  <div class="col-sm-3">
    Trending 1
  </div>
  <div class="col-sm-3">
    Trending 2
  </div>
  <div class="col-sm-3">
    Trending 3
  </div>
  <div class="col-sm-3">
    Trending 4
  </div>
</div>
<% end %>
<%
=end
%>
<div class="row">
  <div class="col-8">
    <p class="btn btn-outline-primary disabled h4">人気トピ</p>
    <% if logged_in?%>
      <%= link_to "トピ作成", communities_path, class:"btn btn-primary float-right h4" %>
    <% else %>
      <%= link_to "ログインしてトピ作成", login_path, class:"btn btn-primary float-right h4" %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-8">
    <%= render partial: "posts/list", locals: { posts: @posts } %>
  </div>
  <div class="col-4">
    <div class="card">
    <h5 class="card-header text-dark">新しいコミュニティ</h5>
      <ul class="list-group list-group-flush">
        <% @communities.each do |community| %>
        <li class="list-group-item  "><%= link_to community.name, community_path(community) %></li>
        <% end %>
      </ul>
    </div>

    <%= link_to "すべてのコミュニティを見る", communities_path,  class: "btn btn-primary mt-2" %>
  </div>
</div>