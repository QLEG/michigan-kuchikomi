<% provide(:title, "ログイン") %>
<h2>ログイン</h2>

<div class="row">
  <div class="col-md-5 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <%= f.label :Eメール, class:"mt-2" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :パスワード, class:"mt-3" %>
      <%= link_to "(パスワードを忘れた方)", new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: "checkbox inline mt-2" do %>
        <%= f.check_box :remember_me %>
        <span>ログインしたままにする</span>
      <% end %>

      <%= f.submit "ログイン", class: "btn btn-primary btn-block mt-2" %>
    <% end %>
    <%= link_to "Twitterアカウントでログイン", '/auth/twitter', method: :post, class: "btn btn-primary btn-block mt-2" %>
    <%= link_to "ゲストログイン(お試し用)", login_guest_sign_in_path, class: "btn btn-primary btn-block mt-2", method: :post %>
    <p class="mt-3">はじめての方はこちら→ <%= link_to "新規ユーザー登録", signup_path, class:"btn btn-sm btn-outline-primary" %></p>

  </div>
</div>
