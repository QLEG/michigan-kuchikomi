<div class="row">
  <div class="col-md-12">
    <% if logged_in?%>
      <%= link_to "出品する", new_good_path, class:"btn btn-primary float-right mb-3" %>
    <% else %>
      <%= link_to "ログインして出品する", login_path, class:"btn btn-primary float-right mb-3" %>
    <% end %>
  </div>
</div>

<div class="row">
  <% @goods.each do |good| %>
    <div class="col-md-3">
      <div class="card-deck mb-3">
        <div class="card">
          <%= image_tag good.image if good.image.attached? %> 
          <div class="card-body text-center">
            <h5 class="card-title"><span class="name pl-2"><%= link_to good.name, good_path(good.id)%></span></h5>
            <p class="card-text"><span class="price pl-2">$ <%= good.price%></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>