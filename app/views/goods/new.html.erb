<h4>Newミシガン掲示板</h4>
<div class="col-md-6">
<%= form_with(model: @good, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <p><h6>出品画像</h6></p>
  <span class="image">
    <%= f.file_field :image %>
  </span>
  <div class="form-group mt-3">
    <%= label_tag :商品名 %>
    <%= f.text_field :name, placeholder: "できるだけ短く簡潔に", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= label_tag :商品の説明 %>
    <%= f.text_area :description, placeholder: "商品の説明（必須300文字以内）例） 2010年頃に日本で1万円で購入したジャケットです。右腕の裾に少し傷があります。", class: 'form-control' %>
  </div>

  <p><h5>商品の詳細</h5></p>

  <div class="form-group">
    <%= label_tag :商品の状態 %>
    <%= f.text_field :goods_condition, placeholder: "新品、未使用 etc.", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= label_tag :商品のサイズ %>
    <%= f.text_field :size, placeholder: "例） レディース 23.5cm 幅広（ワイド）モデル", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= label_tag :受け渡しの方法 %>
    <%= f.text_field :delivery_condition, placeholder: "自宅にてピックアップ/受け渡し地点相談可 etc.", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= label_tag :出品者地域 %>
    <%= f.text_field :area, placeholder: "Novi, Farmington Hills etc.", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= label_tag :出品価格 %>
    <%= f.text_field :price, placeholder: "米ドルベースで記入", class: 'form-control' %>
  </div>


  <%= f.submit "出品する", class: "btn btn-primary mt-3" %>
<% end %>
</div>